<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="vbParent" prefHeight="196.0" prefWidth="448.0" spacing="2.0" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateBrand">
   <children>
      <HBox>
         <children>
            <Label prefHeight="36.0" prefWidth="90.0" text="Brand ID:" />
            <Label fx:id="labelId" prefHeight="37.0" prefWidth="87.0" />
         </children>
      </HBox>
      <HBox>
         <children>
            <Label prefHeight="36.0" prefWidth="90.0" text="Brand Name:" />
            <TextField fx:id="tfName" prefHeight="25.0" prefWidth="294.0" promptText="Brand name">
               <HBox.margin>
                  <Insets top="6.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="76.0" prefWidth="480.0" spacing="20.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="45.0" prefWidth="103.0" styleClass="btn_success" text="Save">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="SAVE" size="15" />
               </graphic>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="45.0" prefWidth="103.0" styleClass="btn_cancel" text="Cancel">
               <graphic>
                  <FontAwesomeIconView fill="WHITE" glyphName="TIMES" size="15" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets left="60.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="4.0" left="5.0" right="2.0" top="4.0" />
   </padding>
</VBox>
