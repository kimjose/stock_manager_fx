<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.textfield.CustomPasswordField?>

<DialogPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="140.0" prefWidth="411.0" style="-fx-background-color: #FFF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox prefHeight="106.0" prefWidth="306.0" spacing="2.0">
         <children>
            <Label prefHeight="30.0" prefWidth="278.0" text="Login to continue">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label prefHeight="29.0" prefWidth="99.0" text="User name" />
            <TextField fx:id="tfUserName" prefHeight="25.0" prefWidth="268.0" promptText="Enter Your Username" />
            <Label prefHeight="29.0" prefWidth="99.0" text="Password" />
            <CustomPasswordField fx:id="pfUserPassword" prefHeight="25.0" prefWidth="255.0" promptText="user password" />
            <Label prefHeight="22.0" prefWidth="352.0" />
         </children>
      </VBox>
   </content>
   <padding>
      <Insets left="5.0" top="20.0" />
   </padding>
   <graphic>
      <ImageView fitHeight="130.0" fitWidth="151.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../user.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
   </graphic>
</DialogPane>
