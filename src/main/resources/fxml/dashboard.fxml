                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="vbCustomers" alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" prefHeight="86.0" prefWidth="141.0" spacing="2.0" styleClass="vb-customers">
