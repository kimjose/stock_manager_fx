<AnchorPane fx:id="vbParent" prefHeight="450.0" prefWidth="610.0" styleClass="parent" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
