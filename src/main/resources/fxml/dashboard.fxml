                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="11.0" layoutY="57.0" spacing="2.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="15.0" prefWidth="97.0" text="Total Balance:" />
                              <Label fx:id="labelVendorBalance" text="0" />
                           </children>
                        </HBox>
                        <Label fx:id="labelNewVendor" styleClass="label-link" text="new vendor" />
                     </children>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
            <LineChart fx:id="lineChart" prefHeight="298.0" prefWidth="604.0">
               <xAxis>
                  <CategoryAxis endMargin="10.0" gapStartAndEnd="false" label="Day" side="BOTTOM" startMargin="10.0" />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Amount" side="LEFT" />
               </yAxis>
               <VBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" />
               </VBox.margin>
            </LineChart>
         </children>
      </VBox>
      <MaskerPane fx:id="maskerPane" prefHeight="200.0" prefWidth="200.0" text="Loading Data..." visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

   </children>
