                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="11.0" layoutY="57.0" spacing="2.0">
                           <children>
                              <Label alignment="CENTER" prefHeight="15.0" prefWidth="97.0" text="Total Balance:" />
                              <Label fx:id="labelCustomerBalance" text="0" />
                           </children>
                        </HBox>
                        <Label fx:id="labelNewCustomer" styleClass="label-link" text="new customer" />
                     </children>
                     <padding>
                        <Insets top="4.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="vbVendors" alignment="TOP_CENTER" layoutX="292.0" layoutY="10.0" prefHeight="86.0" prefWidth="141.0" spacing="2.0" styleClass="vb-vendors">
