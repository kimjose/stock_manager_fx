<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbParent" snapToPixel="false" spacing="2.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GeneralCenter">
   <children>
      <TabPane prefHeight="115.0" prefWidth="254.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Actions">
               <content>
                  <HBox prefHeight="78.0" prefWidth="254.0" spacing="2.0">
                     <children>
                        <Button fx:id="btnAdd" contentDisplay="TOP" mnemonicParsing="false" prefHeight="70.0" prefWidth="75.0" text="Add">
                           <graphic>
                              <FontAwesomeIconView fill="#19d019" glyphName="PLUS" size="18.0" />
                           </graphic>
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <Button fx:id="btnEdit" contentDisplay="TOP" mnemonicParsing="false" prefHeight="70.0" prefWidth="76.0" text="Edit">
                           <graphic>
                              <FontAwesomeIconView fill="#1446e8" glyphName="EDIT" size="18" />
                           </graphic>
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <Button fx:id="btnDelete" contentDisplay="TOP" mnemonicParsing="false" prefHeight="71.0" prefWidth="70.0" text="Delete">
                           <graphic>
                              <FontAwesomeIconView fill="#f80707" glyphName="TRASH" size="18" />
                           </graphic>
                        </Button>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="3.0" left="2.0" top="5.0" />
                     </padding>
                  </HBox>
               </content>
          </Tab>
          <Tab text="Reports">
               <content>
                  <HBox prefHeight="91.0" />
               </content>
          </Tab>
        </tabs>
      </TabPane>
      <Separator>
         <VBox.margin>
            <Insets left="3.0" right="3.0" />
         </VBox.margin>
      </Separator>
      <HBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <TextField fx:id="tfSearch" prefHeight="25.0" promptText="Search table" HBox.hgrow="SOMETIMES">
               <HBox.margin>
                  <Insets right="2.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="6.0" top="2.0" />
         </padding>
      </HBox>
      <Separator>
         <VBox.margin>
            <Insets left="3.0" right="3.0" />
         </VBox.margin>
      </Separator>
      <TableView fx:id="tvGeneral" tableMenuButtonVisible="true">
         <VBox.margin>
            <Insets bottom="4.0" left="3.0" right="3.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</VBox>
